@model List<Categories>
@{
    ViewData["Title"] = "Categories Index";
}

<h2>@ViewData["Title"]</h2>

<a asp-controller="Categories" asp-action="Create">Create Category</a>


<div class="row"> 
    <div class="col-md-4"> 
        <table class="table">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var items in Model){
                    <tr>
                        <th>@items.Name</th>
                        <th>
                            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@items.Id">Edit</a>
                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@items.Id">Delete</a>                            
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@items.Id">Details</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

