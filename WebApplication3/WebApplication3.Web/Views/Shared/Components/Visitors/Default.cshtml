@model VisitorsViewModel

@foreach(var item in ViewBag.visitorsViewModel as List<VisitorsViewModel>){

  <div class="card" style="width: 18rem; margin-bottom: 5px;">
    <div class="card-body" >
      <h5 class="card-title"><strong>@item.Name</strong></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">@item.Published</h6>
      <p class="card-text">@item.Comment</p>
    </div>
  </div>  
}

@if(TempData["result"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["result"]
    </div>
}

<form asp-controller="home" asp-action="SaveChangesVisitor" method="post">
  <div class="mb-3">
    <label class="form-label" asp-for="Name">Name</label>
    <input class="form-control" asp-for="Name">
  </div>

<div class="mb-3" style="margin-bottom: 10px;">
    <textarea asp-for="Comment" class="form-control" placeholder="Comment" style="height: 100px"></textarea>
    <label asp-for="Comment">Comments</label>
</div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>